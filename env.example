# Database (с connection pooling - оптимизировано для аналитики)
DATABASE_URL=postgresql://user:password@localhost:5432/callcentre_crm?connection_limit=50&pool_timeout=30&connect_timeout=10&socket_timeout=120

# JWT (ОБЯЗАТЕЛЬНО задать в production!)
JWT_SECRET=your-very-strong-jwt-secret-key-change-this

# Server
PORT=5007
NODE_ENV=development

# CORS (несколько origins через запятую)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# HTTPS (не устанавливать в development, обязательно в production)
# DISABLE_HTTPS_CHECK=true

# ✅ Redis Cache (для ускорения аналитики в 100x)
# Если Redis недоступен, будет использоваться in-memory кеш
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

